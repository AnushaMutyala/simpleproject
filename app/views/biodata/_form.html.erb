
<%= simple_form_for(@biodatum) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :fathername %>
    <%= f.input :gender %>
    <%= f.input :email %>
    <%= f.input :dateofbirth %>
    <%= f.input :ssc %>
    <%= f.input :inter %>
    <%= f.input :btech %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
